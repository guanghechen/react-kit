{
  "name": "@guanghechen/react-kit",
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/react-kit/tree/release-2.x.x"
  },
  "homepage": "https://github.com/guanghechen/react-kit/tree/release-2.x.x/#readme",
  "engines": {
    "node": ">= 16.0.0"
  },
  "type": "module",
  "scripts": {
    ":publish": "yarn test:coverage && node --experimental-vm-modules node_modules/.bin/lerna publish",
    ":upgrade": "yarn upgrade-interactive && run-s clean format build test",
    "build": "lerna run build --concurrency 1",
    "clean": "lerna clean --yes && yarn install",
    "format": "run-s format:lintfix format:prettier",
    "format:prettier": "prettier . --write",
    "format:lintfix": "eslint . --fix",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-s postinstall:dev",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "rebuild": "run-s clean build",
    "test": "lerna run test --concurrency 1",
    "test:coverage": "lerna run --concurrency 1 test -- --coverage",
    "test:update": "lerna run --concurrency 1 test -- -u",
    "version": "yarn && ghc-doc-link-rewrite && git stage -u yarn.lock packages/**/package.json packages/**/*.md"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.22.10",
    "@guanghechen/conventional-changelog": "^5.0.1",
    "@guanghechen/eslint-config": "^5.0.1",
    "@guanghechen/eslint-config-jsx": "^5.0.3",
    "@guanghechen/eslint-config-ts": "^5.0.4",
    "@guanghechen/helper-jest": "^5.0.4",
    "@guanghechen/jest-config": "^5.0.4",
    "@guanghechen/rollup-config": "^5.1.0",
    "@guanghechen/script-doc-link": "^5.0.6",
    "@types/jest": "29.5.3",
    "@types/node": "^18.17.3",
    "@types/react": "^18.2.19",
    "cross-env": "^7.0.3",
    "eslint": "8.46.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-jest": "27.2.3",
    "eslint-plugin-prettier": "5.0.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "jest": "^29.6.2",
    "lerna": "7.1.4",
    "lint-staged": "13.2.3",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "prettier": "3.0.1",
    "react": "^18.2.0",
    "rimraf": "^5.0.1",
    "rollup": "^3.27.2",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.1.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.3.1"
}
